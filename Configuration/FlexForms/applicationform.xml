<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <singleView>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.tab.applicationTitle</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.successPage>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.successPage</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                                <eval>required</eval>
                            </config>
                        </TCEforms>
                    </settings.successPage>
                    <settings.pageTitle>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.pageTitle</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>80</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.pageTitle>
                    <settings.sendEmailToContact>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.sendEmailToContact</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.sendEmailToContact>
                    <settings.sendEmailToInternal>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.sendEmailToInternal</label>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>50</max>
                                <eval>trim</eval>
                            </config>
                        </TCEforms>
                    </settings.sendEmailToInternal>
                    <settings.sendEmailToApplicant>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.sendEmailToApplicant</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                            <onChange>reload</onChange>
                        </TCEforms>
                    </settings.sendEmailToApplicant>
                    <settings.sendEmailToApplicantSubject>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.sendEmailToApplicantSubject</label>
                            <displayCond>FIELD:settings.sendEmailToApplicant:REQ:true</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <max>150</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.sendEmailToApplicantSubject>
                    <settings.sendEmailToApplicantText>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.sendEmailToApplicantText</label>
                            <displayCond>FIELD:settings.sendEmailToApplicant:REQ:true</displayCond>
                            <config>
                                <type>text</type>
                                <cols>24</cols>
                                <rows>3</rows>
                                <eval>required</eval>
                                <enableRichtext>1</enableRichtext>
                                <richtextConfiguration>default</richtextConfiguration>
                            </config>
                        </TCEforms>
                    </settings.sendEmailToApplicantText>
                    <settings.emailSender>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.emailSender</label>
                            <displayCond>FIELD:settings.sendEmailToApplicant:REQ:true</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>50</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.emailSender>
                    <settings.emailSenderName>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.emailSenderName</label>
                            <displayCond>FIELD:settings.sendEmailToApplicant:REQ:true</displayCond>
                            <config>
                                <type>input</type>
                                <size>20</size>
                                <max>50</max>
                                <eval>trim,required</eval>
                            </config>
                        </TCEforms>
                    </settings.emailSenderName>
                    <settings.saveApplicationInBackend>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.saveApplicationInBackend</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </settings.saveApplicationInBackend>
                    <settings.showSalarayExpectation>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.showSalarayExpectation</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.showSalarayExpectation>

                    <settings.showEarliestDateOfJoining>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.showEarliestDateOfJoining</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.showEarliestDateOfJoining>
                </el>
            </ROOT>
        </singleView>
    </sheets>
</T3DataStructure>