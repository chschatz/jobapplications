<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>General</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <!-- Add settings here ... -->

                    <!-- Example setting: input field with name settings.timeRestriction -->
                    <settings.salaryExpectations>
                        <TCEforms>
                            <label>Test</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Test2</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.salaryExpectations>

                    <settings.orderBy>
                        <TCEforms>
                            <label>Select Single</label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items>
                                    <numIndex index="0">
                                        <numIndex index="0">LLL:EXT:example/Resources/Private/Language/Backend.xlf:settings.registration.orderBy.crdate</numIndex>
                                        <numIndex index="1">crdate</numIndex>
                                    </numIndex>
                                    <numIndex index="1">
                                        <numIndex index="0">LLL:EXT:example/Resources/Private/Language/Backend.xlf:settings.registration.orderBy.title</numIndex>
                                        <numIndex index="1">title</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.orderBy>

                    <settings.detailViewPid>
                        <TCEforms>
                            <label>Select Page for Detailview</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                                <wizards>
                                    <suggest>
                                        <type>suggest</type>
                                    </suggest>
                                </wizards>
                            </config>
                        </TCEforms>
                    </settings.detailViewPid>

                    <!-- end of settings -->

                </el>
            </ROOT>
        </sDEF>
        <singleView>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.tab.applicationTitle</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.showSalarayExpectation>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.showSalarayExpectation</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.showSalarayExpectation>

                    <settings.showEarliestDateOfJoining>
                        <TCEforms>
                            <label>LLL:EXT:jobs/Resources/Private/Language/locallang_backend.xlf:flexform.showEarliestDateOfJoining</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </settings.showEarliestDateOfJoining>
                </el>
            </ROOT>
        </singleView>
    </sheets>
</T3DataStructure>